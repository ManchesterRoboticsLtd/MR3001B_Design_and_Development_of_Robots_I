<?xml version="1.0"?> 

<robot name="link_example">    
          
  <link name="link1" />
  <link name="link2" />
  <link name="link3" />
  <link name="link4" />

    <joint name="joint1" type="fixed">  
        <parent link="link1"/>         
        <child link="link2"/>           
        <origin xyz="1 2 1" rpy="0 0 0" />      
    </joint>

    <joint name="joint2" type="fixed">
        <parent link="link1"/>
        <child link="link3"/>
        <origin xyz="-1 -2 -1" rpy="0 0 0" />
    </joint>

    <joint name="joint3" type="fixed">
        <parent link="link3"/>
        <child link="link4"/>
        <origin xyz="2 1 2" rpy="0 0 -1.57" />
    </joint>

</robot> 
